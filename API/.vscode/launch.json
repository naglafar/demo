{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch",
            "program": "${workspaceFolder}/src/app.local.js",
            "outputCapture": "std",
			"skipFiles": [
				"<node_internals>/**"
			],
            "env": {
                "API_PORT": "3000"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Tests",
            "program": "${workspaceFolder}/node_modules/.bin/jasmine",
            "outputCapture": "std",
			"skipFiles": [
				"<node_internals>/**"
			],
            "env": {
                "API_PORT": "3000"
            }
        },
        {
            "name": "Launch Serverless Debug",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "debug"
            ],
            "port": 3000
        }
    ]
}