    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch",
            "program": "${workspaceFolder}/src/app.local.js",
            "outputCapture": "std",
			"skipFiles": [
				"<node_internals>/**"
			],
            "env": {
                "API_PORT": "3000",
                "AWS_ACCESS_KEY_ID": "MyAccessKeyId",
                "AWS_SECRET_ACCESS_KEY": "mySecretkey",
                "DYNAMODB_IS_OFFLINE": "true",
                "DYNAMODB_TABLE": "demoReadings"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Tests",
            "program": "${workspaceFolder}/node_modules/.bin/jasmine",
            "outputCapture": "std",
			"skipFiles": [
				"<node_internals>/**"
			],
            "env": {
                "API_PORT": "3000",
                "AWS_ACCESS_KEY_ID": "MyAccessKeyId",
                "AWS_SECRET_ACCESS_KEY": "mySecretkey",
                "DYNAMODB_IS_OFFLINE": "true",
                "DYNAMODB_TABLE": "demoReadings"
            }
        }
    ]
}